<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="800" spacing="10" style="-fx-background-color: #f7f7f7; -fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerOrdersController">

    <!-- Üst Butonlar -->
    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#handleCancelOrder" style="-fx-background-color: #ff4d4d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;" text="Cancel Selected Order" />

        <Button onAction="#handleClose" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;" text="Close" />
    </HBox>

    <!-- Başlık -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10 0 10 0;" text="My Orders" />

    <!-- Tablo -->
    <TableView fx:id="ordersTable" prefHeight="350" prefWidth="750">
        <columns>

            <TableColumn fx:id="idColumn" prefWidth="80" text="Order ID" />
            <TableColumn fx:id="orderTimeColumn" prefWidth="140" text="Order Time" />
            <TableColumn fx:id="deliveryTimeColumn" prefWidth="140" text="Delivery Time" />
            <TableColumn fx:id="productsColumn" prefWidth="220" text="Products" />
            <TableColumn fx:id="totalColumn" prefWidth="100" text="Total Cost (₺)" />
            <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />

        </columns>
    </TableView>

</VBox>
