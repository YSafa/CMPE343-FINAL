<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" alignment="CENTER"
      prefWidth="400" prefHeight="260"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.RateCarrierController">

    <Label text="Rate the Carrier"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER">
        <Label text="Rating:" />
        <ComboBox fx:id="ratingBox" prefWidth="80" />
    </HBox>

    <TextArea fx:id="commentArea"
              prefRowCount="4"
              prefWidth="320"
              promptText="Optional comment..." />

    <HBox spacing="12" alignment="CENTER">
        <Button text="Submit" onAction="#handleSubmit" />
        <Button text="Close" onAction="#handleClose" />
    </HBox>

</VBox>