<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MessageController"
            prefWidth="520" prefHeight="420"
            style="-fx-background-color: #f4f6f8;">

    <top>
        <Label text="Messaging"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <ListView fx:id="messageList"
                  style="-fx-background-color: transparent;
                 -fx-control-inner-background: transparent;
                 -fx-selection-bar: transparent;
                 -fx-selection-bar-non-focused: transparent;" />
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-padding:10; -fx-background-color: white;">
            <TextField fx:id="messageField"
                       promptText="Type your message..."
                       HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 20; -fx-padding: 8 15;"/>
            <Button text="Send"
                    onAction="#handleSend"
                    style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;"/>
        </HBox>
    </bottom>


</BorderPane>