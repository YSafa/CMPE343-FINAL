<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.CartController"
            prefWidth="600" prefHeight="400">

    <top>
        <Label text="Your Shopping Cart"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="cartTable">
            <columns>
                <TableColumn fx:id="nameColumn" text="Product"/>
                <TableColumn fx:id="quantityColumn" text="Quantity (kg)"/>
                <TableColumn fx:id="unitPriceColumn" text="Unit Price"/>
                <TableColumn fx:id="totalPriceColumn" text="Total Price"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">

            <!-- Totals -->
            <VBox spacing="4" alignment="CENTER_RIGHT">
                <Label fx:id="subtotalLabel" text="Subtotal: ₺0.00"/>
                <Label fx:id="vatLabel" text="VAT (18%): ₺0.00"/>
                <Label fx:id="totalLabel" text="Total (incl. VAT): ₺0.00"/>
            </VBox>

            <!-- Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Remove Selected" onAction="#handleRemove"/>
                <Button text="Close" onAction="#handleClose"/>
            </HBox>

        </VBox>
    </bottom>



</BorderPane>
