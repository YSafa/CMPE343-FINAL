<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="540.0" minWidth="900.0" prefHeight="650.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OwnerController">
    <top>
        <AnchorPane prefHeight="70.0" prefWidth="1000.0" style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" layoutX="150.0" layoutY="18.0" text="Greengrocer Owner Panel" textFill="#2c3e50" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>
                <Button onAction="#handleLogout" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20;" text="Logout" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="19.0" />
            </children>
        </AnchorPane>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Inventory Management">
                    <content>
                        <AnchorPane>
                            <children>
                                <TableView fx:id="tableProducts" layoutX="335.0" layoutY="20.0" prefHeight="500.0" prefWidth="730.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="350.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                                    <columns>
                                        <TableColumn fx:id="colProdId" prefWidth="50.0" text="ID" />
                                        <TableColumn fx:id="colProdName" prefWidth="140.0" text="Name" />
                                        <TableColumn fx:id="colProdPrice" prefWidth="90.0" text="Price" />
                                        <TableColumn fx:id="colProdStock" prefWidth="90.0" text="Stock" />
                                        <TableColumn fx:id="colProdThreshold" prefWidth="100.0" text="Threshold" />
                                    </columns>
                                </TableView>
                                <VBox layoutX="20.0" layoutY="20.0" prefWidth="310.0" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Product Details" />
                                        <GridPane hgap="10.0" vgap="5.0">
                                            <columnConstraints>
                                                <ColumnConstraints prefWidth="90.0" />
                                                <ColumnConstraints prefWidth="200.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints prefHeight="30.0" /><RowConstraints prefHeight="30.0" />
                                                <RowConstraints prefHeight="30.0" /><RowConstraints prefHeight="30.0" />
                                                <RowConstraints prefHeight="30.0" /><RowConstraints prefHeight="30.0" />
                                            </rowConstraints>
                                            <children>
                                                <Label text="Name:" />
                                                <TextField fx:id="txtProductName" GridPane.columnIndex="1" />
                                                <Label text="Type:" GridPane.rowIndex="1" />
                                                <ComboBox fx:id="comboProductType" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                <Label text="Price:" GridPane.rowIndex="2" />
                                                <TextField fx:id="txtProductPrice" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                <Label text="Stock:" GridPane.rowIndex="3" />
                                                <TextField fx:id="txtProductStock" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                                <Label text="Threshold:" GridPane.rowIndex="4" />
                                                <TextField fx:id="txtProductThreshold" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                                <Label text="Customer:" GridPane.rowIndex="5" />
                                                <ComboBox fx:id="customerBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                            </children>
                                        </GridPane>

                                        <Label text="Product Image:" style="-fx-font-weight: bold;"/>
                                        <ImageView fx:id="productImageView" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: #ddd; -fx-border-width: 1;"/>
                                        <Label fx:id="imageInfoLabel" text="Drag image or use button" textFill="#777" wrapText="true"/>
                                        <Button onAction="#handleChooseImage" text="Choose Image" prefWidth="310.0"/>

                                        <Button onAction="#handleOpenMessages" prefWidth="310.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Open Messages" />
                                        <Separator />
                                        <Button onAction="#handleAddProduct" prefWidth="310.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add Product" />
                                        <Button onAction="#handleUpdateProduct" prefWidth="310.0" text="Update Selected" />
                                        <Button onAction="#handleDeleteProduct" prefWidth="310.0" style="-fx-background-color: #ff4d4d; -fx-text-fill: white;" text="Delete Selected" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <Tab text="Carrier Management">
                    <content>
                        <AnchorPane>
                            <children>
                                <VBox layoutX="20.0" layoutY="20.0" prefWidth="300.0" spacing="15.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Hire New Carrier" />
                                        <TextField fx:id="txtCarrierUser" promptText="Username" />
                                        <PasswordField fx:id="txtCarrierPass" promptText="Password" />
                                        <TextField fx:id="txtCarrierAddress" promptText="Address" />
                                        <Button onAction="#handleEmployCarrier" prefWidth="300.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Employ Carrier" />
                                        <Separator />
                                        <Button onAction="#handleViewCarrierReviews" prefWidth="300.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="View Carrier Reviews" />
                                        <Button onAction="#handleFireCarrier" prefWidth="300.0" style="-fx-background-color: #ff4d4d; -fx-text-fill: white;" text="Fire Selected Carrier" />
                                    </children>
                                </VBox>
                                <TableView fx:id="tableCarriers" layoutX="335.0" layoutY="20.0" prefHeight="450.0" prefWidth="730.0" AnchorPane.leftAnchor="335.0" AnchorPane.rightAnchor="20.0">
                                    <columns>
                                        <TableColumn fx:id="colCarrId" prefWidth="60.0" text="ID" />
                                        <TableColumn fx:id="colCarrUser" prefWidth="180.0" text="Username" />
                                        <TableColumn fx:id="colCarrAddress" prefWidth="300.0" text="Address" />
                                        <TableColumn fx:id="colCarrRating" prefWidth="140.0" text="Rating ⭐" />
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <Tab text="All Orders">
                    <content>
                        <TableView fx:id="tableOrders" prefHeight="450.0" prefWidth="960.0" style="-fx-padding: 20;">
                            <columns>
                                <TableColumn fx:id="colOrderId" prefWidth="50.0" text="ID" />
                                <TableColumn fx:id="colOrderTime" prefWidth="140.0" text="Order Time" />
                                <TableColumn fx:id="colOrderCustomer" prefWidth="140.0" text="Customer" />
                                <TableColumn fx:id="colOrderCarrier" prefWidth="140.0" text="Carrier" />
                                <TableColumn fx:id="colOrderContent" prefWidth="220.0" text="Content" />
                                <TableColumn fx:id="colOrderTotal" prefWidth="90.0" text="Total (₺)" />
                                <TableColumn fx:id="colOrderStatus" prefWidth="140.0" text="Status" />
                            </columns>
                        </TableView>
                    </content>
                </Tab>

                <Tab text="Reports">
                    <content>
                        <ScrollPane fitToWidth="true">
                            <content>
                                <VBox spacing="20.0" style="-fx-padding: 20;">
                                    <children>
                                        <HBox spacing="20.0">
                                            <children>
                                                <VBox alignment="CENTER" prefHeight="80.0" prefWidth="250.0" style="-fx-background-color: white; -fx-border-color: #4CAF50; -fx-border-radius: 10; -fx-border-width: 2;" HBox.hgrow="ALWAYS">
                                                    <children><Label text="Total Revenue" /><Label fx:id="lblTotalRevenue" text="₺ 0.00" style="-fx-font-weight: bold; -fx-font-size: 20;" /></children>
                                                </VBox>
                                                <VBox alignment="CENTER" prefHeight="80.0" prefWidth="250.0" style="-fx-background-color: white; -fx-border-color: #2196F3; -fx-border-radius: 10; -fx-border-width: 2;" HBox.hgrow="ALWAYS">
                                                    <children><Label text="Total Orders" /><Label fx:id="lblTotalOrders" text="0" style="-fx-font-weight: bold; -fx-font-size: 20;" /></children>
                                                </VBox>
                                                <VBox alignment="CENTER" prefHeight="80.0" prefWidth="250.0" style="-fx-background-color: white; -fx-border-color: #FF9800; -fx-border-radius: 10; -fx-border-width: 2;" HBox.hgrow="ALWAYS">
                                                    <children><Label text="Active Carriers" /><Label fx:id="lblActiveCarriers" text="0" style="-fx-font-weight: bold; -fx-font-size: 20;" /></children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                        <HBox spacing="20.0">
                                            <children>
                                                <BarChart fx:id="salesChart" prefHeight="300.0" HBox.hgrow="ALWAYS"><xAxis><CategoryAxis side="BOTTOM" /></xAxis><yAxis><NumberAxis side="LEFT" /></yAxis></BarChart>
                                                <PieChart fx:id="statusPieChart" prefHeight="300.0" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

                <Tab text="Coupons">
                    <content>
                        <AnchorPane prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <VBox layoutX="20.0" layoutY="20.0" spacing="10.0">
                                    <children>
                                        <TextField fx:id="txtCouponCode" promptText="Code" />
                                        <TextField fx:id="txtCouponRate" promptText="Rate (%)" />
                                        <TextField fx:id="txtCouponDays" promptText="Valid Days" />
                                        <TextField fx:id="txtCouponMin" promptText="Min Cart" />
                                        <Button onAction="#handleCreateCoupon" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Create" prefWidth="300"/>
                                        <Button onAction="#handleRefreshCoupons" text="Refresh" prefWidth="300"/>
                                        <TableView fx:id="tableCoupons" prefHeight="300" prefWidth="600">
                                            <columns>
                                                <TableColumn fx:id="colCouponId" prefWidth="60" text="ID" /><TableColumn fx:id="colCouponCode" prefWidth="120" text="Code" />
                                                <TableColumn fx:id="colCouponRate" prefWidth="80" text="Rate" /><TableColumn fx:id="colCouponExpire" prefWidth="160" text="Expire" />
                                                <TableColumn fx:id="colCouponActive" prefWidth="80" text="Active" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>