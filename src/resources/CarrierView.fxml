<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="540.0" minWidth="900.0" prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CarrierController">
   <top>
      <AnchorPane prefHeight="70.0" prefWidth="960.0" style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="50.0" fitWidth="70.0" layoutX="15.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="15.0">
               <image>
                  <Image url="@../resources/logo.png" />
               </image>
            </ImageView>

            <Label alignment="CENTER" layoutX="180.0" layoutY="18.0" prefHeight="35.0" text="Carrier Delivery Panel" textFill="#2c3e50" AnchorPane.leftAnchor="180.0" AnchorPane.rightAnchor="180.0">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <HBox alignment="CENTER_RIGHT" layoutX="700.0" layoutY="18.0" spacing="12.0" AnchorPane.rightAnchor="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleRefresh" prefHeight="32.0" prefWidth="90.0" style="-fx-background-radius: 20; -fx-cursor: hand;" text="Refresh" />
                  <Button mnemonicParsing="false" onAction="#handleLogout" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #e74c3c; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 20;" text="Logout" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Available Orders">
            <content>
              <BorderPane>
                 <center>
                    <TableView fx:id="tableAvailable">
                       <columns>
                          <TableColumn fx:id="colAvailId" prefWidth="80" text="Order ID" />
                          <TableColumn fx:id="colAvailProducts" prefWidth="260" text="Products" />
                          <TableColumn fx:id="colAvailCustomer" prefWidth="120" text="Customer" />
                          <TableColumn fx:id="colAvailAddress" prefWidth="220" text="Address" />
                          <TableColumn fx:id="colAvailTotal" prefWidth="90" text="Total" />
                          <TableColumn fx:id="colAvailDelivery" prefWidth="170" text="Delivery Time" />
                       </columns>
                    </TableView>
                 </center>
                 <bottom>
                    <HBox alignment="CENTER" spacing="10" style="-fx-padding: 15;">
                       <children>
                          <Button onAction="#handleClaimSelectedAvailable" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="Claim Selected Order" />
                       </children>
                    </HBox>
                 </bottom>
              </BorderPane>
            </content>
          </Tab>
          <Tab text="Selected Orders">
            <content>
               <BorderPane>
                  <top>
                     <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15; -fx-background-color: #f9f9f9;">
                        <children>
                           <Label text="Delivered Date:" style="-fx-font-weight: bold;" />
                           <DatePicker fx:id="deliveredDatePicker" />
                           <Label text="Hour:" style="-fx-font-weight: bold;" />
                           <ComboBox fx:id="deliveredHourBox" prefWidth="80" />
                           <Button onAction="#handleCompleteSelectedOrder" prefHeight="30.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand;" text="Mark as Delivered" />
                        </children>
                     </HBox>
                  </top>
                  <center>
                     <TableView fx:id="tableSelected">
                        <columns>
                           <TableColumn fx:id="colSelId" prefWidth="80" text="Order ID" />
                           <TableColumn fx:id="colSelProducts" prefWidth="260" text="Products" />
                           <TableColumn fx:id="colSelCustomer" prefWidth="120" text="Customer" />
                           <TableColumn fx:id="colSelAddress" prefWidth="220" text="Address" />
                           <TableColumn fx:id="colSelTotal" prefWidth="90" text="Total" />
                           <TableColumn fx:id="colSelDelivery" prefWidth="170" text="Delivery Time" />
                        </columns>
                     </TableView>
                  </center>
               </BorderPane>
            </content>
          </Tab>
          <Tab text="Completed Deliveries">
            <content>
               <TableView fx:id="tableCompleted">
                  <columns>
                     <TableColumn fx:id="colComId" prefWidth="80" text="Order ID" />
                     <TableColumn fx:id="colComProducts" prefWidth="360" text="Products" />
                     <TableColumn fx:id="colComCustomer" prefWidth="160" text="Customer" />
                     <TableColumn fx:id="colComTotal" prefWidth="100" text="Total" />
                     <TableColumn fx:id="colComDelivered" prefWidth="220" text="Delivered Time" />
                  </columns>
               </TableView>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>